{
  "name": "oh-designie-lp",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "react-scripts-ts start",
    "build": "react-scripts-ts build",
    "test": "react-scripts-ts test --env=jsdom",
    "eject": "react-scripts-ts eject",
    "tslint": "tslint './src/**/*.{ts,tsx}'",
    "prettier": "prettier --write ./src/**/*.{ts,tsx}",
    "precommit": "npm-run-all -p lint-staged tslint",
    "lint-staged": "lint-staged"
  },
  "dependencies": {
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "react-router-dom": "^4.2.2",
    "react-scripts-ts": "2.16.0"
  },
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "@types/node": "^10.1.3",
    "@types/react": "^16.3.14",
    "@types/react-dom": "^16.0.5",
    "@types/react-router-dom": "^4.2.6",
    "husky": "^0.14.3",
    "lint-staged": "^7.1.2",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.13.0",
    "tslint": "^5.10.0",
    "typescript": "^2.8.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  }
}
